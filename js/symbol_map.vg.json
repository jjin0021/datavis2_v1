{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 450,
  "title": {"text":"Australian Public Universities Students in 2021", "fontSize": 24, "subtitle": "by Citizenship", "subtitleFontSize": 20},
  "projection": {
    "type": "mercator"
  },
  "view": {"stroke": "transparent"},
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/jjin0021/datavis2/main/js/ne_50m.topojson",
        "format": {"type": "topojson", "feature": "ne_50m_graticules_10"}
      },
      "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/jjin0021/datavis2/main/js/ne_50m.topojson",
        "format": {"type": "topojson", "feature": "ne_50m_admin_1_states_provinces"}
      },
      "mark" : {"type": "geoshape", "fill": "darkgray", "stroke": "white"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/jjin0021/datavis2/main/data/aus_pub_uni.csv"
      },
      "transform": [
        {"filter": "datum.Year == 2021"}
      ],
      "mark": {"type": "circle"},
      "encoding": {
        "longitude": {"field": "Longitude", "type": "quantitative"},
        "latitude": {"field": "Latitude", "type": "quantitative"},
        "size" : {
          "aggregate": "sum",
          "field": "Count",
          "type": "quantitative",
          "title": "Number of Students",
          "scale": {
            "domain": [1000, 300000],
            "range": [10, 3000]
          },
          "legend": {"orient": "none", "legendX": 50, "legendY": 475, "direction": "horizontal", "labelFontSize": 11, "titleFontSize": 16, "titleOrient": "left"}
        },
        "color": {
          "field": "Citizenship",
          "type": "nominal",
          "scale": {
            "domain": [
              "Domestic",
              "International"
            ],
            "range": [
              "#4138af",
              "#ffe330"
            ]
          },
          "legend": {"orient": "none", "legendX": 700, "legendY": 15, "symbolSize": 500, "labelFontSize": 11, "titleFontSize": 16}
        },
        "opacity": {"value": 0.9},
        "tooltip": [
          {"field": "State"},
          {"field": "Year"},
          {"field": "Citizenship"},
          {"aggregate": "sum", 
            "field": "Count", 
            "type": "quantitative",
            "title": "Number of Students",
            "format": ","}
        ]
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/jjin0021/datavis2/main/data/aus_pub_uni.csv"
      },
      "transform": [
        {"filter": "datum.Year == 2021"},
        {"filter": {"field": "Citizenship", "equal": "International"}}
      ],
      "mark": {
        "type": "text", 
        "align": "center",
        "baseline": "middle",
        "dy": 12,
        "fontSize": 12
        },
      "encoding": {
        "longitude": {"field": "Longitude", "type": "quantitative"},
        "latitude": {"field": "Latitude", "type": "quantitative"},
        "text": {"field": "State_Short"}
      }
    }
  ]
}
